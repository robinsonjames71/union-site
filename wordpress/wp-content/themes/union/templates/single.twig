{% extends "base.twig" %}

{% block content %}

	{% for row_item in post.get_field('row') %}

		{% if row_item.acf_fc_layout == 'menu' %}
			{% include 'partial/menu.twig' %}

		{% endif %}

	{% endfor %}

	<div
		class="heros hero3 red-menu"
	>

		<img sizes="100vw"
			 src="{{ TimberImage(post.thumbnail).src }}"
			 srcset="{{ TimberImage(post.thumbnail).src | retina(2) }} 2x, {{ TimberImage(post.thumbnail).src | resize(1000) }} 1000w, {{ TimberImage(post.thumbnail).src | resize(500) }} 500w" alt="{{ TimberImage(post.thumbnail).alt }}">

		<div class="hero-text">
			<div class="container">
				<div class="columns is-centered is-mobile">
					<div class="column has-text-centered">
						<h1>{{post.title}}</h1>
					</div>
				</div>
			</div>
		</div>
	</div>

	{% for row_item in post.get_field('row') %}

		{% if row_item.acf_fc_layout == 'logo_hero' %}
			{% include 'partial/hero_1.twig' %}

		{% elseif row_item.acf_fc_layout == 'parallax_hero' %}
			{% include 'partial/hero_2.twig' %}

		{% elseif row_item.acf_fc_layout == 'static_hero' %}
			{% include 'partial/hero_3.twig' %}

		{% elseif row_item.acf_fc_layout == 'body_heading' %}
			{% include 'partial/body_heading.twig' %}

		{% elseif row_item.acf_fc_layout == 'two_column_text' %}
			{% include 'partial/two_column_text.twig' %}

		{% elseif row_item.acf_fc_layout == 'two_column_text_row_test' %}
			{% include 'partial/two_column_text_row.twig' %}

		{% elseif row_item.acf_fc_layout == 'video' %}
			{% include 'partial/video.twig' %}

		{% elseif row_item.acf_fc_layout == 'img_txt_overlay' %}
			{% include 'partial/img_txt_overlay.twig' %}

		{% elseif row_item.acf_fc_layout == 'text_and_logos_columns' %}
			{% include 'partial/text_and_logos_columns.twig' %}

		{% elseif row_item.acf_fc_layout == 'text_and_logos_fullwidth' %}
			{% include 'partial/text_and_logos_fullwidth.twig' %}

		{% elseif row_item.acf_fc_layout == 'contact_map' %}
			{% include 'partial/contact_map.twig' %}

		{% elseif row_item.acf_fc_layout == 'profile' %}
			{% include 'partial/profile.twig' %}

		{% elseif row_item.acf_fc_layout == 'quotes' %}
			{% include 'partial/quotes.twig' %}

		{% elseif row_item.acf_fc_layout == 'img-column-txt-column' %}
			{% include 'partial/img_column_txt_column.twig' %}

		{% elseif row_item.acf_fc_layout == 'four_columns' %}
			{% include 'partial/four_columns.twig' %}

		{% elseif row_item.acf_fc_layout == 'full_row_width_image' %}
			{% include 'partial/full_row_width_image.twig' %}

		{% elseif row_item.acf_fc_layout == 'two_half_row_width_images' %}
			{% include 'partial/two_half_row_width_images.twig' %}

		{% elseif row_item.acf_fc_layout == 'img_txt_row' %}
			{% include 'partial/img_txt_row.twig' %}


		{% elseif row_item.acf_fc_layout == 'raw_html' %}
			{% include 'partial/raw_html.twig' %}

		{% endif %}

	{% endfor %}

	<div
		class="social-share"
	>
		<div class="section">
			<div class="columns is-centered">
				<div class="column is-two-thirds has-text-centered">
					<h4 class="is-size-4 is-size-5-touch">Social Share</h4>
					<div class="addthis_toolbox">
						<div class="custom_images">
							<a class="addthis_button_facebook"><img src="{{ site.theme.link }}/img/social-facebook.png" width="40" height="40" border="0" alt="Share to Facebook"></a>
							<a class="addthis_button_twitter"><img src="{{ site.theme.link }}/img/social-twitter.png" width="40" height="40" border="0" alt="Share to Twitter"></a>
							<a class="addthis_button_linkedin"><img src="{{ site.theme.link }}/img/social-linkedin.png" width="40" height="40" border="0" alt="Share to LinkedIn"></a>
							<a class="addthis_button_email"><img src="{{ site.theme.link }}/img/social-email.png" width="40" height="40" border="0" alt="Share with Email"></a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>



{% endblock %}
