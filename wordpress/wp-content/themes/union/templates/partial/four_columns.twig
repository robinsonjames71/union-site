<div
    class="module four_columns {{row_item.menu_colour}}-menu"
    id="{{row_item.row_id}}"
    style="background-color:{{row_item.background_colour}}"
>
    <div class="section">
        <div class="columns">
            <div class="column is-one-quarter has-text-centered-mobile">
                <img src="{{ TimberImage(row_item.column_1.image).src }}" srcset="{{ TimberImage(row_item.column_1.image).src | retina(2) }} 2x" alt="{{ row_item.column_1.image.alt }}">
                <p>{{row_item.column_1.text}}</p>
            </div>
            <div class="column is-one-quarter has-text-centered-mobile">
                <img src="{{ TimberImage(row_item.column_2.image).src }}" srcset="{{ TimberImage(row_item.column_2.image).src | retina(2) }} 2x" alt="{{ row_item.column_2.image.alt }}">
                <p>{{row_item.column_2.text}}</p>
            </div>
            <div class="column is-one-quarter has-text-centered-mobile">
                <img src="{{ TimberImage(row_item.column_3.image).src }}" srcset="{{ TimberImage(row_item.column_3.image).src | retina(2) }} 2x" alt="{{ row_item.column_3.image.alt }}">
                <p>{{row_item.column_3.text}}</p>
            </div>
            <div class="column is-one-quarter has-text-centered-mobile">
                <img src="{{ TimberImage(row_item.column_4.image).src }}" srcset="{{ TimberImage(row_item.column_4.image).src | retina(2) }} 2x" alt="{{ row_item.column_4.image.alt }}">
                <p>{{row_item.column_4.text}}</p>
            </div>
        </div>
    </div>
</div>