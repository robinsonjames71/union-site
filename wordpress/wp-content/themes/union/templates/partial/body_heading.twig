<div
    class="module body_heading {{row_item.menu_colour}}-menu"
    id="{{row_item.row_id}}"
    style="background-color:{{row_item.background_colour}};"
>
    <div class="section">
        <div class="columns">
            <div class="column is-two-thirds{% if row_item.mobile_align == 'center' %} has-text-centered-mobile{% endif %}{% if row_item.align_column == 'right' %} is-offset-one-third{% endif %}">
                {{row_item.text}}
            </div>
        </div>
    </div>
</div>