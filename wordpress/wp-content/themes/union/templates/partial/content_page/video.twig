
<div class="content-block content-block--video">

	<div class="content-block__details content-block__details_1 content-block__details--side">
		<div class="content-block__details__caption">
			{{ content_page_post_item.post_caption }}
		</div>
		<div class="content-block__details__divider"></div>
		<div class="content-block__details__location">
			{{ content_page_post_item.post_location }}
		</div>
	</div>

	<div class="content-block--video__embed">
		<a class="content-block--video__embed__link" href="{{ content_page_post_item.link }}">
			<div class="embed-container b-lazy is-hidden-touch" data-src="{{ TimberImage(post_type_item.video_still).src | resize(1400) | retina(2) }}"></div>
			<img class="is-hidden-desktop" src="{{ TimberImage(post_type_item.video_still).src }}"/>
		</a>
		<div class="content-block--video__embed__play" data-modal-content='<div class="embed-container">{{ function('oEmbedAddParams',post_type_item.embed_link, {'autoplay':'1'}) }}</div>'></div>
	</div>

	<div class="content-block--article__content-bottom">
		<a class="content-block--article__content-bottom__link" href="{{ content_page_post_item.link }}">
			<h2 class="title is-size-2 is-size-3-touch is-size-2-desktop">{{ post_type_item.title }}</h2>

			<div class="content">
				<p>{{ post_type_item.description }}</p>
			</div>
		</a>
		<div class="content-block__details content-block__details_2">
			<div class="content-block__details__caption">
				{% for term in content_page_post_item.terms %}
					{% if loop.last %}
						{{ term.name }}
					{% else %}
						{{ term.name }} /
					{% endif %}
				{% endfor %}
			</div>
			<div class="content-block__details__divider"></div>
			<div class="content-block__details__location">
				{{ post_type_item.read_time }}
			</div>
			<a href="https://www.facebook.com/sharer/sharer.php?u={{ content_page_post_item.link | e('url') }}" target="_blank" class="share-link"></a>
		</div>

	</div>

</div>
