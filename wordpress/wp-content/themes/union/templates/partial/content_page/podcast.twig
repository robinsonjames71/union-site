<div class="content-block content-block--podcast">

	<div class="content-block__details content-block__details_1 content-block__details--side">
		<div class="content-block__details__caption">
			{{ content_page_post_item.post_caption }}
		</div>
		<div class="content-block__details__divider"></div>
		<div class="content-block__details__location">
			{{ content_page_post_item.post_location }}
		</div>
	</div>

	<div class="embed-container"><iframe class="b-lazy" data-src="{{ post_type_item.url }}"></iframe></div>
	{# there is another field called "post_type.article_content", wont be needed here, we'll use it on the individual post page #}

	{# output the custom terms - we use to link podcasts together in a series #}
	<!-- {% for term in post_type_item.series %}
		{{ term.name }}
	{% endfor %} -->

	<a href="{{ content_page_post_item.link }}" class="podcast-clickable-area"></a>

	<div class="content-block--article__content-bottom">

		<h2 class="title is-size-2 is-size-3-touch is-size-2-desktop"><a href="{{ content_page_post_item.link }}">{{ post_type_item.title }}</a></h2>

		{#
		<div class="content">
			<p>{{ post_type_item.description }}</p>
		</div>
		#}

		<div class="content-block__details content-block__details_2">
			<div class="content-block__details__caption">
				{% for term in content_page_post_item.terms %}
					{% if loop.last %}
						{{ term.name }}
					{% else %}
						{{ term.name }} /
					{% endif %}
				{% endfor %}
			</div>
			<div class="content-block__details__divider"></div>
			<div class="content-block__details__location">
				{{ post_type_item.read_time }}
			</div>
			<a href="https://www.facebook.com/sharer/sharer.php?u={{ content_page_post_item.link | e('url') }}" target="_blank" class="share-link"></a>
		</div>

	</div>

</div>
