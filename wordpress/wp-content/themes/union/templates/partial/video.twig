<div
    class="module video {{row_item.menu_colour}}-menu"
    id="{{row_item.row_id}}"
    style="background-color:{{row_item.background_colour}}"
>
    <div class="section">
        {% if row_item.video_play_btn %}
            <div class="video-play img">
                <img src="{{ TimberImage(row_item.video_play_btn).src }}" alt="Play Video">
            </div>
        {% else %}
            <div class="video-play btn"></div>
        {% endif %}
        <video controls="true" poster="{{ TimberImage(row_item.video_placeholder).src }}">
            <source src="{{ row_item.video_url}} " type="video/mp4">
        </video>
    </div>
</div>
